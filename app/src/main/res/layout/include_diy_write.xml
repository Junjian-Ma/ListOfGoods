<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_small"
    android:paddingEnd="@dimen/margin_medium">

    <TextView
        android:id="@+id/quantity_text"
        style="@style/diy_write_text"
        android:text="@string/sellQuantity"
        android:layout_alignBottom="@id/diy_quantity_edit"/>

    <EditText
        android:id="@+id/diy_quantity_edit"
        style="@style/diy_write_edit"
        android:layout_toEndOf="@id/quantity_text"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/price_text"
        style="@style/diy_write_text"
        android:text="@string/sellPrice"
        android:layout_alignBottom="@id/diy_price_edit" />

    <EditText
        android:id="@+id/diy_price_edit"
        style="@style/diy_write_edit"
        android:layout_below="@id/diy_quantity_edit"
        android:layout_toEndOf="@id/price_text"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/button_diy_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sellString"
        android:onClick="onClick"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/diy_price_edit"/>

</RelativeLayout>